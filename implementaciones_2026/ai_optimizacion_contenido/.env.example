# ============================================
# Configuración de IA para Optimización de Contenido
# ============================================

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Google Gemini Configuration (Fallback - Opcional)
GEMINI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GEMINI_MODEL=gemini-1.5-pro

# Budget Control
AI_BUDGET_MONTHLY_USD=100
AI_BUDGET_ALERT_THRESHOLD=0.8  # Alertar al 80%
AI_BUDGET_PAUSE_AT_LIMIT=true

# Cache Configuration
AI_CACHE_ENABLED=true
AI_CACHE_TTL_DAYS=30

# Rate Limiting
AI_RATE_LIMIT_RPM=500  # Requests per minute
AI_MAX_CONCURRENT=10

# Default Language
AI_DEFAULT_LANGUAGE=es

# Approval Workflow
AI_AUTO_APPROVE_ADMIN=false  # Requiere aprobación manual incluso para admins
AI_MIN_APPROVAL_SCORE=0.8    # Score mínimo para auto-aprobar (si habilitado)

# Logging
AI_LOG_LEVEL=info
AI_LOG_COSTS=true
